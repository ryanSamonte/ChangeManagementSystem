@model ChangeManagementSystem.Models.ChangeManagementModels

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row" style="margin-bottom: 30px;">
        <div class="col-md-6">
            <div class="card ">
                <div class="header">
                    <h4 class="title" id="cmdCountLabel" style="font-size: 40px; color: red;"></h4>
                </div>
                <div class="content">
                    <div class="footer">
                        <hr>
                        <div class="stats" style="color: #2471d1; font-family: 'Century Gothic'; text-transform: uppercase; font-size: 17px;">
                            Change Management Document
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card ">
                <div class="header">
                    <h4 class="title" id="implementedCmdCountLabel" style="font-size: 40px; color: green;"></h4>
                </div>
                <div class="content">
                    <div class="footer">
                        <hr>
                        <div class="stats" style="color: #2471d1; font-family: 'Century Gothic'; text-transform: uppercase; font-size: 17px;">
                            Implemented
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-bottom: 30px;">
        <div class="col-md-6">
            <div class="card" style="margin-bottom: 30px;min-height: 425px;">
                <div class="header">
                    <h4 class="title">Change Document Record</h4>
                </div>
                <div class="content">
                    <div id="chartPreferences" class="ct-chart ct-perfect-fourth" style="margin-bottom: 70px;"></div>

                    <div class="footer">
                        <div class="legend">
                            <span><span style="background-color: green;"><i class="pe-7s-albums" style="color: green;"></i></span>&nbsp;&nbsp;Implemented</span>
                            &nbsp;&nbsp;&nbsp;&nbsp;<span><span style="background-color: orange;"><i class="pe-7s-albums" style="color: orange;"></i></span>&nbsp;&nbsp;Not Implemented</span>
                            &nbsp;&nbsp;&nbsp;&nbsp;<span><span style="background-color: red;"><i class="pe-7s-albums" style="color: red;"></i></span>&nbsp;&nbsp;Past the Deadline</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card" style="margin-bottom: 0px;">
                <div class="header">
                    <h4 class="title">Change Document Every Month</h4>
                </div>
                <div class="content">
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <select class="form-control" id="barChartMonth">
                                <option value="01">January</option>
                                <option value="02">February</option>
                                <option value="03">March</option>
                                <option value="04">April</option>
                                <option value="05">May</option>
                                <option value="06">June</option>
                                <option value="07">July</option>
                                <option value="08">August</option>
                                <option value="09">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div id="chartActivity" class="ct-chart"></div>
                    </div>

                    <div class="footer">
                        <div class="legend">
                            <span><span style="background-color: green;"><i class="pe-7s-albums" style="color: green;"></i></span>&nbsp;&nbsp;Implemented</span>
                            &nbsp;&nbsp;&nbsp;&nbsp;<span><span style="background-color: orange;"><i class="pe-7s-albums" style="color: orange;"></i></span>&nbsp;&nbsp;Not Implemented</span>
                            &nbsp;&nbsp;&nbsp;&nbsp;<span><span style="background-color: red;"><i class="pe-7s-albums" style="color: red;"></i></span>&nbsp;&nbsp;Past the Deadline</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="incomingCmdImplementationUrl" data-request-url="@Url.Action("GetAllIncoming", "Cmd")"></div>
    <div class="row">
        <div class="col">
            <div class="card" style="min-height: 370px; margin-bottom: 0px;">
                <div class="header">
                    <h4 class="title">Incoming Change Implementation</h4>
                </div>
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-hover table-striped text-center" id="latestCmdTable">
                                        <thead class="text-center">
                                            <tr>
                                                <th class="text-center">Requestor</th>
                                                <th class="text-center">Type</th>
                                                <th class="text-center">Evaluation</th>
                                                <th class="text-center">Target Date</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="container-fluid">
    <div class="modal fade" id="viewCmdInfoModal" tabindex="-1" role="dialog" data-backdrop="false">
        <div class="modal-dialog" role="document">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color: #2471d1; color: #fff;">
                    <button type="button" class="close" data-dismiss="modal" style="color: #fff;">&times;</button>
                    <h4 class="modal-title">View Change Management Document</h4>
                </div>
                <div class="modal-body">
                    <form method="post" id="newChangeDocumentForm">
                        @Html.AntiForgeryToken()
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="changeObjectiveView">Objective</label>
                                        <textarea class="form-control form-control-sm" id="changeObjectiveView" name="changeObjectiveView" rows="3" readonly></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="changeTypeView">Type</label>
                                        <select class="form-control form-control-sm" id="changeTypeView" name="changeTypeView" disabled>
                                            <option value="1">Corrective Patch</option>
                                            <option value="2">New Function</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="changeRequirementView">Management Requirement</label>
                                        <textarea class="form-control form-control-sm" id="changeRequirementView" name="changeRequirementView" rows="3" readonly></textarea>
                                    </div>
                                </div>
                            </div>
                            <hr style="border-bottom: 1px solid black;" />
                            <label style="color: #333; font-size: 15px;">Affected Areas</label>
                            <div class="row" style="margin-top: 15px;">
                                <div class="col">
                                    <div class="content table-responsive table-full-width">
                                        <table class="table table-hover table-striped text-center" id="affectedAreasTableView">
                                            <thead class="text-center">
                                                <tr>
                                                    <th class="text-center">Application(s)</th>
                                                    <th class="text-center">Database & Table(s)</th>
                                                    <th class="text-center">Server(s)/ IP(s)</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <hr style="border-bottom: 1px solid black;" />
                            <div class="row">
                                <div class="col-md-6" style="margin-bottom: 25px;">
                                    <div class="form-group">
                                        <label for="requestEvaluationView">Request Evaluation</label>
                                        <input type="text" class="form-control form-control-sm" id="requestEvaluationView" name="requestEvaluationView" readonly>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="targetImplementationView">Target Implementation Date and Time</label>
                                        <input type="text" class="form-control form-control-sm" id="targetImplementationView" name="targetImplementationView" readonly>
                                    </div>
                                </div>
                            </div>
                            <hr style="border-bottom: 1px solid black;" />
                            <label style="color: #333; font-size: 15px;">Change Management Sign-off</label>
                            <br /><br />
                            <label style="color: #333; font-size: 13px;">Requestor:</label>
                            <div class="row" style="margin-top: 15px;">
                                <div class="col">
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-sm" id="requestorView" name="requestorView" readonly>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <label style="color: #333; font-size: 13px;">Reviewed by:</label>
                            <div class="row" style="margin-top: 15px;">
                                <div class="col">
                                    <div class="content table-responsive table-full-width">
                                        <table class="table table-hover table-striped text-center" id="signOffTableView">
                                            <thead class="text-center">
                                                <tr>
                                                    <th class="text-center">Name</th>
                                                    <th class="text-center">Role</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <hr style="border-bottom: 1px solid black;" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-fill btn-primary" id="btnGenerate" data-generate-id="">Generate Document</a>
                    <button type="button" class="btn btn-fill btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            setInterval(getCmdCount, 1000);

            setInterval(getImplementedCmdCount, 1000);

            fillInPieChart();

            defaultBarGraph();

            var month = new Date().getMonth();

            $("#barChartMonth").val("0" + (month + 1));
        });

        function getCmdCount() {
            $.ajax({
                url: '@Url.Action("GetCmdCount", "Cmd")',
                type: "GET",
                success: function (data) {
                    var jsonStringified = JSON.stringify(data);
                    var countDetails = JSON.parse(jsonStringified);

                    $("#cmdCountLabel").html("<i class='pe-7s-copy-file'></i>&nbsp;&nbsp;" + countDetails);
                },
                error: function (data) {
                    alert("error");
                }
            });
        }

        function getImplementedCmdCount() {
            $.ajax({
                url: '@Url.Action("GetImplementedCmdCount", "Cmd")',
                type: "GET",
                success: function (data) {
                    var jsonStringified = JSON.stringify(data);
                    var implementedCountDetails = JSON.parse(jsonStringified);

                    $("#implementedCmdCountLabel").html("<i class='pe-7s-like2'></i>&nbsp;&nbsp;" + implementedCountDetails);
                },
                error: function (data) {
                    alert("Error!");
                }
            });
        }

        function fillInPieChart() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCmdPercentage", "Cmd")',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                error: OnError
            });

            function OnSuccess(response) {
                var jsonStringified = JSON.stringify(response);

                var percentageDetails = JSON.parse(jsonStringified);

                var dataPreferences = {
                    series: [
                        [25, 30, 20, 25]
                    ]
                };

                var optionsPreferences = {
                    donut: true,
                    donutWidth: 10,
                    startAngle: 0,
                    total: 100,
                    showLabel: false,
                    axisX: {
                        showGrid: false
                    }
                };

                Chartist.Pie('#chartPreferences', dataPreferences, optionsPreferences);

                Chartist.Pie('#chartPreferences', {
                    labels: [(Math.floor(percentageDetails.implemented * 100) / 100) + "%", (Math.floor(percentageDetails.notImplemented * 100) / 100) + "%", (Math.floor(percentageDetails.pastTheDeadline * 100) / 100) + "%"],
                    series: [
                        {
                            value: (Math.floor(percentageDetails.implemented * 100) / 100),
                            name: 'Series 1',
                            className: 'implementedChart',
                            meta: 'Meta One'
                        },
                        {
                            value: (Math.floor(percentageDetails.notImplemented * 100) / 100),
                            name: 'Series 1',
                            className: 'notImplementedChart',
                            meta: 'Meta One'
                        },
                        {
                            value: (Math.floor(percentageDetails.pastTheDeadline * 100) / 100),
                            name: 'Series 1',
                            className: 'pastTheDeadlineChart',
                            meta: 'Meta One'
                        }
                    ]
                },
                {
                    chartPadding: 30,
                    labelOffset: 40,
                    labelDirection: 'explode',
                    donut: true,
                    donutWidth: 50
                });
            }

            function OnError(response) {
                alert("No data available!");
            }
        }

        function defaultBarGraph() {
            var currentMonth = new Date().getMonth() + 1;

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCmdPercentagePerMonth", "Cmd")?month=' + currentMonth,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                error: OnError
            });

            function OnSuccess(response) {
                var jsonStringified = JSON.stringify(response);

                var percentageDetails = JSON.parse(jsonStringified);

                var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                var data = {
                    labels: [months[new Date().getMonth()]],
                    series: [
                      [percentageDetails.implemented],
                      [percentageDetails.notImplemented],
                      [percentageDetails.pastTheDeadline]
                    ]
                };

                var options = {
                    seriesBarDistance: 10,
                    axisX: {
                        showGrid: false
                    },
                    height: "245px"
                };

                var responsiveOptions = [
                  ['screen and (max-width: 640px)', {
                      seriesBarDistance: 5,
                      axisX: {
                          labelInterpolationFnc: function (value) {
                              return value[0];
                          }
                      }
                  }]
                ];

                Chartist.Bar('#chartActivity', data, options, responsiveOptions);
            }

            function OnError(response) {
                alert("No data available!");
            }
        }

        $(document).on("change", "#barChartMonth", function () {
            var month = $("#barChartMonth").val();

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCmdPercentagePerMonth", "Cmd")?month=' + month,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                error: OnError
            });

            function OnSuccess(response) {
                var jsonStringified = JSON.stringify(response);

                var percentageDetails = JSON.parse(jsonStringified);

                var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                var data = {
                    labels: [months[month - 1]],
                    series: [
                      [percentageDetails.implemented],
                      [percentageDetails.notImplemented],
                      [percentageDetails.pastTheDeadline]
                    ]
                };

                var options = {
                    seriesBarDistance: 10,
                    axisX: {
                        showGrid: false
                    },
                    height: "245px"
                };

                var responsiveOptions = [
                  ['screen and (max-width: 640px)', {
                      seriesBarDistance: 5,
                      axisX: {
                          labelInterpolationFnc: function (value) {
                              return value[0];
                          }
                      }
                  }]
                ];

                Chartist.Bar('#chartActivity', data, options, responsiveOptions);
            }

            function OnError(response) {
                alert("Error !");
            }
        });
    </script>
}